---
import LogoText from "../components/LogoText.astro";
import HorizonGradient from "../components/HorizonGradient.astro";
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title = "Start" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Madeyski.org | {title}</title>
    <meta name="description" content="My personal website" />
	</head>
	<body class="bg-gray-400">
    <HorizonGradient />

    <LogoText />
    <NavBar />

    <div class="min-h-100 mt-6 px-10 py-8 container w-full max-w-screen-lg mx-auto text-shadow-sm bg-white/80 backdrop-blur-sm rounded-3xl shadow-md/30">
      <slot />
    </div>

    <Footer />
	</body>
</html>

<style>
  @reference "tailwindcss";

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
