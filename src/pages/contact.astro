---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";

---

<Layout title="Contact">
  <h1 class="text-2xl font-bold mb-4">Kontakt</h1>

  <form class="mx-auto max-w-screen-sm grid grid-cols-1 md:grid-cols-[10rem_1fr] gap-4">
    <div class="p-2">
      E-mail:
    </div>
    <div class="">
     <input type="email" placeholder="E-mail" class="w-full border border-gray-700/50 rounded bg-gray-100 p-2" />
    </div>

    <div class="p-2">
      Temat:
    </div>
    <div>
     <input type="text" placeholder="Temat" class="w-full border border-gray-700/50 rounded bg-gray-100 p-2" />
    </div>

    <div class="p-2">
      Wiadomość:
    </div>
    <div>
     <textarea placeholder="Wiadomość" class="w-full border border-gray-700/50 rounded bg-gray-100 p-2" />
    </div>

    <div></div>
    <div class="mx-auto mt-2">
      <button type="submit" class="w-full font-semibold border shadow-xs rounded-lg bg-gray-100 px-4 py-2 hover:bg-gray-200 transition-colors">Send</button>
    </div>

  </form>
</Layout>
